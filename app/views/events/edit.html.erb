<%= stylesheet_link_tag "events/base" %>
<%= stylesheet_link_tag "events/new"%>
<!-- 戻るボタンのためにリンクしてある -->
<div class="sub-header">
   <h1><%= link_to "＜", events_path, class: "back" %></h1>
   <h1><%= @event.name %>を更新</h1>
</div>

<div form-content>
  <%= form_for(@event, url: update_event_path ) do |f| %>
    
    <%= f.label "名前"%>
    <%= f.text_field :name %>

    <%= f.label "日時" %>
    <%= f.datetime_select :held_at %>

    <%= f.submit "更新", data: { disable_with: "更新中..." } %>
  <% end %>

<div class="index-title">
  <h1>イベント一覧</h1>
</div>

<div class="events">

  <table border="1" class="events-table">
    <tr>
      <th class="events-table-header">イベント名</th>
      <th class="events-table-header">開催日時</th>
      <th class="events-table-header">場所</th>
      <th class="events-table-header">幹事</th>
      <th class="events-table-header">更新日時</th>
    </tr>
    <% @events.each do |event| %>
    <tr>
      <th class="events-table-data"><%= link_to event.name, action:"show", id: event.id  %></td>
      <th class="events-table-data"><%= event.held_at %></td>
      <th class="events-table-data">Coming Soon</td>
      <th class="events-table-data">Coming Soon</td>
      <th class="events-table-data"><%= event.updated_at %></td>
    </tr>
    <% end %>
  </table>

</div>